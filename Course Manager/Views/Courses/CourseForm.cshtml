@model Course_Manager.Models.NewCourseViewModel

@{
    ViewBag.Title = "CourseForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Course</h2>

@using (Html.BeginForm("Save", "Courses"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(s => s.Course.Name)
        @Html.TextBoxFor(s => s.Course.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Course.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Course.GradeLevel)
        @Html.TextBoxFor(s => s.Course.GradeLevel, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Course.GradeLevel)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Course.CategoryId)
        @Html.DropDownListFor(s => s.Course.CategoryId, new SelectList(Model.Catergories, "Id", "Name"), "Choose a category", new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Course.CategoryId)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Course.CanBeAnElective)
        @Html.CheckBoxFor(s => s.Course.CanBeAnElective, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Course.CanBeAnElective)
    </div>
    @Html.HiddenFor(m => m.Course.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

